<Window x:Class="MODS.SettingHostFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MODS"
        mc:Ignorable="d"
        Title="SettingHostFile" Height="450" Width="800" VerticalContentAlignment="Stretch">
    <Grid >
        <StackPanel>
            <TextBox Height="23" Name="TEXT_FILE_URL"  Text="C:\windows\system32\drivers\etc\hosts" HorizontalAlignment="Stretch" VerticalAlignment="Top"  ToolTip="HOST文件位置 这是默认位置" TextChanged="TEXT_FILE_URL_TextChanged" />
            <DockPanel>
                <Button Name="BT_UPDATE" Content="修改" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="150" Click="BT_UPDATE_Click"/>
                <Button Name="BT_LOAD" Content="加载" HorizontalAlignment="Right"  VerticalAlignment="Top" Width="150" Click="BT_LOAD_Click"/>
            </DockPanel>
            <TextBox Name="TEXT_FILE_VAL" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextWrapping="Wrap" AcceptsTab="True" AcceptsReturn="True" Height="375" VerticalContentAlignment="Stretch"/>
        </StackPanel>
    </Grid>
</Window>
